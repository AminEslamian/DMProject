<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DMProject.MainPage">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            

            <Label
                Text="DM App!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />


            <VerticalStackLayout>
            <!--    INPUT BOX     -->
                    
                    <Button Text="Theme" Clicked="OnChangeThemeClicked" HorizontalOptions="End" BackgroundColor="DarkOliveGreen"/>

                        <Label x:Name="headerLable"
                        Text="Input: The least number of train stations"
                        FontSize="14"/>

                        <Editor x:Name="messageEditor" 
                        Placeholder="Type your message..." 
                        AutoSize="TextChanges"
                        HeightRequest="200"
                        TextChanged="OnMessageEditorTextChanged"/>

                        <Button x:Name="submitButton" IsEnabled="False" Text="Submit" Clicked="OnSendClicked"/>
            </VerticalStackLayout>
            
                <!-- control buttons  -->
            <Grid ColumnDefinitions="*,*,*,*,*"
             ColumnSpacing="5">

                    <Button Text="Question No." 
                Clicked="onChangedQuestion" 
                Background="#556B2F"
                Grid.Column="0"/>

                    <Button Text="Paste TestCase" 
                Clicked="onPastedQuestion" 
                Background="#808000"
                Grid.Column="1"/>

                    <Button x:Name="clearButton" 
                Text="Clear" 
                IsEnabled="False" 
                Clicked="onClearInputClicked" 
                Background="#BDB76B"
                Grid.Column="2"/>

                    <Button Text="Close" 
                Clicked="OnExitClicked" 
                Background="#F0E68C"
                Grid.Column="3"/>

                    <Button Text="Reset" 
                Clicked="OnResetClicked" 
                Background="#EEE8AA"
                Grid.Column="4"/>
            </Grid>


            <!--    OUTPUT BOX     -->
            <Label Text="output:" 
                   FontSize="14"/>

            <Editor x:Name="outputEditor" 
                IsReadOnly="True" 
                AutoSize="TextChanges"
                HeightRequest="150"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>